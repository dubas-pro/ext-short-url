{
    "name": "dubas/espocrm-ext-dubas-short-url",
    "description": "",
    "license": [
        "GPL-3.0-or-later"
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^9.2",
        "rector/rector": "^0.10.3"
    },
    "scripts": {
        "espo:rebuild": [
            "@espo:copy",
            "node build --rebuild"
        ],
        "espo:copy": "node build --copy",
        "espo:clear-cache": "rm -rf site/data/cache/*",
        "espo:tests-prepare": [
            "@espo:copy",
            "cd site && grunt test"
        ],
        "espo:tests-unit": [
            "@espo:copy",
            "cd site && vendor/bin/phpunit tests/unit/Espo/Modules/DubasShortUrl"
        ],
        "espo:tests-integration": [
            "@espo:copy",
            "cd site && vendor/bin/phpunit tests/integration/Espo/Modules/DubasShortUrl"
        ],
        "espo:merge-configs": "cd php_scripts && php merge_configs.php",
        "espo:after-install": "cd php_scripts && php after_install.php",
        "espo:after-uninstall": "cd php_scripts && php after_uninstall.php",
        "espo:cc": [
            "@espo:copy",
            "@espo:clear-cache"
        ],
        "espo:ccr": [
            "@espo:cc",
            "@espo:rebuild"
        ],
        "ecs": [
            "vendor/bin/ecs check --fix"
        ],
        "rector": [
            "vendor/bin/rector process"
        ]
    },
    "extra": {
        "scripts-description": {
            "ecs": "Fix coding standards warnings/errors automatically with PHP Easy Coding Standard"
        }
    }
}
